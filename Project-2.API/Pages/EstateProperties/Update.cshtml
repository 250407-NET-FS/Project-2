@page "{id}"
@model EstateProperties.UpdateModel
@{
    ViewData["Title"] = "Edit Property";
}

<h1>Edit Property</h1>
<hr>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Property.StreetAddress" class="control-label"></label>
                <input asp-for="Property.StreetAddress" class="form-control" value=@Model.Property.StreetAddress />
                <span asp-validation-for="Property.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.City" class="control-label">Full Name</label>
                <input asp-for="Property.City" class="form-control" value=@Model.Property.City />
                <span asp-validation-for="Property.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.State" class="control-label">Full Name</label>
                <input asp-for="Property.State" class="form-control" value=@Model.Property.State />
                <span asp-validation-for="Property.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.Country" class="control-label"></label>
                <input asp-for="Property.Country" class="form-control" value=@Model.Property.Country/>
                <span asp-validation-for="Property.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.Bedrooms" class="control-label"></label>
                <input asp-for="Property.Bedrooms" class="form-control" value=@Model.Property.Bedrooms/>
                <span asp-validation-for="Property.Bedrooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.Bathrooms" class="control-label"></label>
                <input asp-for="Property.Bathrooms" class="form-control" value=@Model.Property.Bathrooms/>
                <span asp-validation-for="Property.Bathrooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.StartingPrice" class="control-label"></label>
                <input asp-for="Property.StartingPrice" class="form-control" value=@Model.Property.StartingPrice/>
                <span asp-validation-for="Property.StartingPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>