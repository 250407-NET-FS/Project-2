@page
@model Project_2.Pages.Offers.CreateModel
@{
    ViewData["Title"] = "Create Offer";
}

<h1>Create Offer</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Offer.BidAmount" class="control-label"></label>
                <input asp-for="Offer.BidAmount" class="form-control" />
                <span asp-validation-for="Offer.BidAmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>